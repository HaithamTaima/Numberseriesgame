<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:layout_height="match_parent"
    tools:context=".Regstar">

    <ImageView
        android:id="@+id/img_person"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/person" />


    <EditText

    android:id="@+id/fullname_regstar"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:hint="Full Name"
        android:background="@drawable/txt"
    android:textSize="23dp"
    android:layout_marginTop="20dp"
    android:ems="10"
    android:inputType="textPersonName"
    />

    <EditText
        android:id="@+id/txtemailRegstar"
        android:layout_width="match_parent"
        android:hint="Email "

        android:textSize="23dp"
        android:background="@drawable/txt"
        android:layout_marginTop="10dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/name_regstar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/txt"
        android:hint="User Name"
        android:textSize="23dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/txt"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtRepasswordRegstar"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"

            android:ems="10"
            android:hint="Return password"
            android:inputType="textPassword"
            android:textSize="23dp" />

        <EditText
            android:id="@+id/password_return"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:hint="password"
            android:textSize="23dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginTop="15dp"
            android:entries="@array/select_array" />

        <EditText
            android:id="@+id/txt_Date"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginTop="10dp"

            android:ems="10"

            android:hint="Birht day"
            android:inputType="date"
            android:textSize="23dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/male"
                android:textSize="23dp"
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male" />

            <RadioButton
                android:id="@+id/female"
                android:layout_marginStart="150dp"
                android:layout_width="match_parent"
                android:textSize="23dp"
                android:layout_height="wrap_content"
                android:text="femLe" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="23dp"
            android:layout_marginTop="30dp"
            android:text="Save" />
    </LinearLayout>

</LinearLayout>






